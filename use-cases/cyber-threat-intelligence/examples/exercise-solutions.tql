#--------------------------------------------------
# Exercise 01 solution:

match
$indicator-domain isa indicator,
  has indicator-type "domain",
  has name $name,
  has description $description;

#--------------------------------------------------
# Exercise 02 solution:

#display
match
  $t isa threat-actor, has id "threat-actor--bbbbbbbb-bbbb-bbbb-bbbb-bbbbbbbbbbbb";

#insert new threat-actor-types
match
  $t isa threat-actor, has id "threat-actor--bbbbbbbb-bbbb-bbbb-bbbb-bbbbbbbbbbbb";
insert
  $t has threat-actor-type "insider";

#--------------------------------------------------
# Exercise 03 solution:

match
  $bravo-ca isa campaign, has id "campaign--d4e5f6a7-8b9c-0d1e-2f3a-4b5c6d7e8f9a";
  $bravo-ma isa malware, has id "malware--bbbbbbbb-bbbb-bbbb-bbbb-bbbbbbbbbbbb";

insert
  (used-target: $bravo-ma, using-source: $bravo-ca) isa uses,
    has id "relationship--01234567-89ab-cdef-0123-456789abcdef";

